{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Spotify Downloader (Complete Workflow)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/spotdl/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PLAYLIST_ID": "${input:playlistId}"
      }
    },
    {
      "name": "Debug Car Audio Only (Existing Files)",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/spotdl/main.py",
      "args": ["--car-audio", "${input:musicFolder}"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "id": "playlistId",
      "description": "Spotify Playlist ID",
      "default": "${env:PLAYLIST_ID}",
      "type": "promptString"
    },
    {
      "id": "musicFolder",
      "description": "Path to music folder for metadata fixing",
      "default": "./spotdl/downloads",
      "type": "promptString"
    }
  ]
}
